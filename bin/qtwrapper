#!/bin/sh

#------------------------------------------------------------------------------
# Functions
#------------------------------------------------------------------------------

function PrintUsage
	{
	echo -e "Usage: $0"
	echo -e "Options:"
	echo -e "    -d             Print QT_BUILD_DIR"
	}


#------------------------------------------------------------------------------
# Main
#------------------------------------------------------------------------------

# Parse command line
while getopts "hd" option
do
	case "$option" in
		h)
			PrintUsage
			exit 0
			;;
		d)
			echo $QT_BUILD_DIR
			exit 0
			;;
	esac
done

# Pop options from command line, leaving only arguments.
# Arguments can now be accessed using $1 $2 etc if required.
shift $(($OPTIND - 1))

if [ ! -d $QT_BUILD_DIR/bin ]
then
	echo "Error: directory $QT_BUILD_DIR/bin does not exist."
	echo "Check value of QT_BUILD_DIR environment variable."
	exit 1
fi

if [ -z "$*" ]
then
	echo $QT_BUILD_DIR
else
	$QT_BUILD_DIR/bin/$*
fi

