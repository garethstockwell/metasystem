# screenrc

#------------------------------------------------------------------------------
# Settings
#------------------------------------------------------------------------------

activity						""
altscreen						on
autodetach						on
defscrollback					10000
hardcopydir						~/.screen
nethack							off
nonblock						on
msgminwait						1
msgwait							3
startup_message					off
vbell							off


#------------------------------------------------------------------------------
# Terminal setup
#------------------------------------------------------------------------------

# Enable scrollbar
termcapinfo	xterm*				ti@:te@


#------------------------------------------------------------------------------
# Messages
#------------------------------------------------------------------------------

activity						"activity in %n (%t)"
bell_msg						"bell in %n (%t)"
vbell_msg						"bell in %n (%t)"
defhstatus						"screen: ^En (^Et)"

windowlist title				" Num%+3=| Fl%+3=| Name"
windowlist string				" %3n%+3=| %f%+3=| %t"


#------------------------------------------------------------------------------
# Misc
#------------------------------------------------------------------------------

# Start at window 1
# https://wiki.archlinux.org/index.php/GNU_Screen#Start_at_window_1
bind c screen 1
bind ^c screen 1
bind 0 select 10
screen 1


#------------------------------------------------------------------------------
# Key bindings
#------------------------------------------------------------------------------

escape ^\\

bindkey "^[Od" prev
bindkey "^[Oc" next

# Do not trash BackSpace, usually DEL
bindkey -k kb
bindkey -d -k kb

# Do not trash Delete, usually ESC [ 3 ~
bindkey -k kD
bindkey -d -k kD

# Allow direct selection of windows
bindkey "^[1" select 1
bindkey "^[2" select 2
bindkey "^[3" select 3
bindkey "^[4" select 4
bindkey "^[5" select 5
bindkey "^[6" select 6
bindkey "^[7" select 7
bindkey "^[8" select 8
bindkey "^[9" select 9
bindkey "^[0" select 10


#------------------------------------------------------------------------------
# Status
#------------------------------------------------------------------------------

#hardstatus alwayslastline
#hardstatus string "%{-b gk}%-w%{-b kg}%50>%n %t%{-b gk}%+w%< %-= %C:%s"

