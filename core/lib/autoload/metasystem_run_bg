local args=
local background=1
for token in "$@"; do
	case $token in
		-fg | --fg | -foreground | --foreground)
			background=
			;;
		-bg | --bg | -background | --background)
			background=1
			;;
		*)
			[[ -n $args ]] && args="$args "
			args="$args$token"
			;;
	esac
done
if [[ -n $background ]]; then
	echo "Launching '$args' in background ..."
	nohup $args 1>/dev/null 2>/dev/null &
else
	$args
fi

