# screenrc

#------------------------------------------------------------------------------
# Settings
#------------------------------------------------------------------------------

autodetach				on
startup_message			off
vbell					off
nethack					off
defscrollback			10000

msgminwait				1
msgwait					3


#------------------------------------------------------------------------------
# Messages
#------------------------------------------------------------------------------

activity				"activity in %n (%t)"
bell_msg				"bell in %n (%t)"
defhstatus				"screen: ^En (^Et)"

windowlist title		" Num%+3=| Fl%+3=| Name"
windowlist string		" %3n%+3=| %f%+3=| %t"


#------------------------------------------------------------------------------
# Key bindings
#------------------------------------------------------------------------------

escape ^Ee

bindkey ^[ prev
bindkey ^] next

# Enable SHIFT-PGUP / SHIFT-PGDOWN scroll
#termcapinfo xterm*		ti@:te@


#------------------------------------------------------------------------------
# Status
#------------------------------------------------------------------------------

hardstatus alwayslastline

# Left: window list
# Right: host and load
hardstatus string "%{-b gk}%-w%{+b yg}%50>%n %t%{-b gk}%+w%<%-30= [ %H ]"

